extends ../layout.pug

block content
    form(action="/products/"+item._id+'/update' method="POST")
        div
            label Name
            input(type="text" name="name" value=item.name)
        div
            label Description
            input(type="text" name="description" value=item.description)
        div
            label Price
            input(type="number" name="price"  value=item.price)
        div
            label Image
            input(type="text" name="productImageURL"  value=item.productImageURL)
        div
            label Category
            select(name="category" value= value=item.category)
                option(value="chidos") chidos
                option(value="mas chidos") mas chidos
                option(value="super chidos") super chidos
        input(type="submit", value="Guardar")