extends ../layout.pug

block content
    form(action="" method="POST")
        div
            label Name
            input(type="text" name="name")
        div
            label Description
            input(type="text" name="description")
        div
            label Price
            input(type="number" name="price")
        div
            label Image
            input(type="text" name="productImageURL")
        div
            label Category
            select(name="category")
                option(value="chidos") chidos
                option(value="mas chidos") mas chidos
                option(value="super chidos") super chidos
        input(type="submit", value="Guardar")